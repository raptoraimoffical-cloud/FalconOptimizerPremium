{
  "items": [
    {
      "id": "exp.usb.open_mouse_settings",
      "type": "action",
      "name": "Open Mouse Settings",
      "category": "Expansion / USB & Input",
      "risk": "Safe",
      "description": "[Focus: Latency / Input Delay] Opens Windows mouse settings (pointer precision, etc.).",
      "requiresAdmin": false,
      "requiresReboot": false,
      "apply": {
        "steps": [
          {
            "type": "cmd.run",
            "command": "start ms-settings:mouse"
          }
        ]
      },
      "revert": {
        "steps": []
      },
      "riskLevel": "Safe"
    },
    {
      "id": "exp.usb.open_keyboard_settings",
