    {
      "id": "exp.usb.controller_overclock",
      "type": "button",
      "name": "Controller Overclock (Polling Rate) â€” Guided Auto-Apply",
      "category": "Expansion / USB & Input",
      "risk": "Warning",
      "description": "[Focus: Latency / Input Delay] Guided controller polling-rate overclock using bundled Hidusbf. Toggle ON to open the guided panel. Recommended: PlayStation controllers = 1000Hz. Xbox often cannot truly overclock due to firmware. Requires admin; may require unplug/replug or reboot.",
      "requiresAdmin": true,
      "requiresReboot": false,
      "apply": {
        "steps": [
          {
            "type": "ps.file",
            "path": "scripts/controller-overclock.ps1",
            "args": {
              "Action": "list"
            }
          }
        ]
      },
      "riskLevel": "Warning",
      "note": "Converted from toggle (missing revert)."
    },
