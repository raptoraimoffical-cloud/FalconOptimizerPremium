    {
      "id": "adv.devices.disable_communication_ports_com1-com2",
      "name": "Apply: Disable Communication Ports (COM1–COM2)",
      "category": "Advanced / Devices",
      "risk": "Warning",
      "description": "[Focus: FPS, Latency / Input Delay] Disables the matching device via PnP (requires reboot for some devices).",
      "requiresAdmin": true,
      "requiresReboot": false,
      "apply": {
        "steps": [
          {
            "type": "shell.start",
            "file": "powershell.exe",
            "args": [
              "-NoProfile",
              "-ExecutionPolicy",
              "Bypass",
              "-Command",
              "Get-PnpDevice -FriendlyName '*Communications Port*' -ErrorAction SilentlyContinue | Disable-PnpDevice -Confirm:$false -ErrorAction SilentlyContinue"
            ],
            "wait": true
          }
        ]
      },
      "revert": {
        "steps": [
          {
            "type": "shell.start",
            "file": "powershell.exe",
            "args": [
              "-NoProfile",
              "-ExecutionPolicy",
              "Bypass",
              "-Command",
              "Get-PnpDevice -FriendlyName '*Communications Port*' -ErrorAction SilentlyContinue | Enable-PnpDevice -Confirm:$false -ErrorAction SilentlyContinue"
            ],
            "wait": true
          }
        ]
      },
      "type": "button",
      "riskLevel": "Warning",
      "kind": "tool",
      "manualOnly": true
    },
