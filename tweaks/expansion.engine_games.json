    {
      "id": "engine_game_disable_xbox_services_safe_stop",
      "type": "action",
      "name": "Engine/Game: Disable Xbox services (safe stop)",
      "description": "Stops Xbox-related services (can reduce background activity if you don't use Xbox features).",
      "requiresAdmin": true,
      "riskLevel": "Safe",
      "category": "Engine/Games",
      "apply": {
        "steps": [
          {
            "type": "ps.run",
            "command": "\n$svcs = \"XblAuthManager\",\"XblGameSave\",\"XboxGipSvc\",\"XboxNetApiSvc\"\nforeach($s in $svcs){ \n  $svc = Get-Service -Name $s -ErrorAction SilentlyContinue\n  if($svc){ try{ Stop-Service $s -Force -ErrorAction SilentlyContinue }catch{} }\n}\nWrite-Output \"Stopped\"\n"
          }
        ]
      },
      "revert": {
        "steps": [
          {
            "type": "ps.run",
            "command": "\n$svcs = \"XblAuthManager\",\"XblGameSave\",\"XboxGipSvc\",\"XboxNetApiSvc\"\nforeach($s in $svcs){ \n  $svc = Get-Service -Name $s -ErrorAction SilentlyContinue\n  if($svc){ try{ Start-Service $s -ErrorAction SilentlyContinue }catch{} }\n}\nWrite-Output \"Attempted restore\"\n"
          }
        ]
      }
    },
