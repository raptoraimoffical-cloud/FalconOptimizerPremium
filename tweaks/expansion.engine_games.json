{
  "items": [
    {
      "id": "engine_game_disable_game_bar_dvr_global",
      "type": "action",
      "name": "Engine/Game: Disable Game Bar + DVR (global)",
      "description": "Disables Xbox Game Bar and GameDVR capture features to reduce background hooks/overlays.",
      "requiresAdmin": true,
      "riskLevel": "Safe",
      "category": "Engine/Games",
      "apply": {
        "steps": [
          {
            "type": "reg.set",
            "path": "HKCU\\\\Software\\\\Microsoft\\\\GameBar",
            "name": "AllowAutoGameMode",
            "regType": "DWORD",
            "value": 0
          },
          {
            "type": "reg.set",
            "path": "HKCU\\\\Software\\\\Microsoft\\\\Windows\\\\CurrentVersion\\\\GameDVR",
            "name": "AppCaptureEnabled",
            "regType": "DWORD",
            "value": 0
          },
          {
            "type": "reg.set",
            "path": "HKCU\\\\System\\\\GameConfigStore",
            "name": "GameDVR_Enabled",
            "regType": "DWORD",
            "value": 0
          }
        ]
      },
      "revert": {
        "steps": [
          {
            "type": "reg.del",
            "path": "HKCU\\\\Software\\\\Microsoft\\\\GameBar",
            "name": "AllowAutoGameMode"
          },
          {
            "type": "reg.del",
            "path": "HKCU\\\\Software\\\\Microsoft\\\\Windows\\\\CurrentVersion\\\\GameDVR",
            "name": "AppCaptureEnabled"
          },
          {
            "type": "reg.del",
            "path": "HKCU\\\\System\\\\GameConfigStore",
            "name": "GameDVR_Enabled"
          }
        ]
      }
    },
    {
      "id": "engine_game_prefer_max_performance_gpu_for_common_launchers",
      "type": "action",
      "name": "Engine/Game: Prefer max performance GPU for common launchers",
      "description": "Sets Windows graphics preference to High performance for Steam/Epic/Battle.net/Riot clients.",
      "requiresAdmin": true,
      "riskLevel": "Safe",
      "category": "Engine/Games",
      "apply": {
        "steps": [
          {
            "type": "ps.run",
            "command": "\n$apps = @(\n  \"$env:ProgramFiles(x86)\\Steam\\steam.exe\",\n  \"$env:ProgramFiles\\Epic Games\\Launcher\\Portal\\Binaries\\Win64\\EpicGamesLauncher.exe\",\n  \"$env:ProgramFiles(x86)\\Battle.net\\Battle.net.exe\",\n  \"$env:ProgramFiles\\Riot Vanguard\\vgc.exe\"\n)\n$gp = \"HKCU:\\Software\\Microsoft\\DirectX\\UserGpuPreferences\"\nforeach($a in $apps){ if(Test-Path $a){ New-Item -Path $gp -Force | Out-Null; New-ItemProperty -Path $gp -Name $a -Value \"GpuPreference=2;\" -PropertyType String -Force | Out-Null } }\nWrite-Output \"Done\"\n"
          }
        ]
      },
      "revert": {
        "steps": []
      }
    },
