{
  "items": [
    {
      "id": "exp.meas.dxdiag_report",
      "type": "action",
      "name": "Generate DxDiag Report",
      "category": "Expansion / Measurement & Validation",
      "risk": "Safe",
      "description": "[Focus: FPS, Latency / Input Delay] Saves dxdiag output to %ProgramData%\\FalconOptimizer\\Reports\\dxdiag.txt and opens it.",
      "requiresAdmin": false,
      "requiresReboot": false,
      "apply": {
        "steps": [
          {
            "type": "ps.run",
            "command": "$dir=Join-Path $env:ProgramData 'FalconOptimizer\\Reports'; New-Item -ItemType Directory -Force -Path $dir | Out-Null; dxdiag /t (Join-Path $dir 'dxdiag.txt') | Out-Null"
          },
          {
            "type": "open.file",
            "path": "%ProgramData%\\FalconOptimizer\\Reports\\dxdiag.txt"
          }
        ]
      },
      "revert": {
        "steps": []
      },
      "riskLevel": "Safe"
    },
    {
      "id": "exp.meas.driverquery_report",
      "type": "action",
      "name": "Generate Driver List Report",
      "category": "Expansion / Measurement & Validation",
      "risk": "Safe",
      "description": "[Focus: FPS, Latency / Input Delay] Saves driverquery to %ProgramData%\\FalconOptimizer\\Reports\\drivers.csv and opens it.",
      "requiresAdmin": true,
      "requiresReboot": false,
      "apply": {
        "steps": [
          {
            "type": "ps.run",
            "command": "$dir=Join-Path $env:ProgramData 'FalconOptimizer\\Reports'; New-Item -ItemType Directory -Force -Path $dir | Out-Null; driverquery /v /fo csv | Out-File -Encoding utf8 (Join-Path $dir 'drivers.csv')"
          },
          {
            "type": "open.file",
            "path": "%ProgramData%\\FalconOptimizer\\Reports\\drivers.csv"
          }
        ]
      },
      "revert": {
        "steps": []
      },
      "riskLevel": "Safe"
    },
