    {
      "id": "exp.scheduler.hybrid_hetero_policy",
      "type": "toggle",
      "name": "Hybrid CPU Scheduler â€“ Heterogeneous Policy",
      "category": "Expansion / MMCSS & Scheduling",
      "risk": "High",
      "description": "[Focus: Latency / Input Delay] Applies DynamicHeteroCpuPolicy* kernel keys to bias scheduling in favor of important threads on performance cores for hybrid CPUs. Advanced; only recommended for stable systems.",
      "requiresAdmin": true,
      "requiresReboot": true,
      "apply": {
        "steps": [
          {
            "type": "registry.set",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DynamicHeteroCpuPolicyMask",
            "value": 3,
            "valueType": "DWord"
          },
          {
            "type": "registry.set",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DefaultDynamicHeteroCpuPolicy",
            "value": 3,
            "valueType": "DWord"
          },
          {
            "type": "registry.set",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DynamicHeteroCpuPolicyImportant",
            "value": 1,
            "valueType": "DWord"
          },
          {
            "type": "registry.set",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DynamicHeteroCpuPolicyImportantShort",
            "value": 1,
            "valueType": "DWord"
          },
          {
            "type": "registry.set",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DynamicHeteroCpuPolicyImportantPriority",
            "value": 8,
            "valueType": "DWord"
          }
        ]
      },
      "revert": {
        "steps": [
          {
            "type": "registry.remove",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DynamicHeteroCpuPolicyMask"
          },
          {
            "type": "registry.remove",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DefaultDynamicHeteroCpuPolicy"
          },
          {
            "type": "registry.remove",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DynamicHeteroCpuPolicyImportant"
          },
          {
            "type": "registry.remove",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DynamicHeteroCpuPolicyImportantShort"
          },
          {
            "type": "registry.remove",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DynamicHeteroCpuPolicyImportantPriority"
          }
        ]
      },
      "riskLevel": "High",
      "check": {
        "steps": [
          {
            "type": "registry.check",
            "path": "HKLM\\SYSTEM\\CurrentControlSet\\Control\\Session Manager\\Kernel",
            "name": "DynamicHeteroCpuPolicyMask",
            "valueType": "DWord",
            "equals": 3
          }
        ]
      }
    },
