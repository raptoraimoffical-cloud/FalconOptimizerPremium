{
  "items": [
    {
      "id": "exp.mmcss.networkthrottling_disable",
      "type": "toggle",
      "name": "Disable Network Throttling (MMCSS)",
      "category": "Expansion / MMCSS & Scheduling",
      "risk": "High",
      "description": "[Focus: Latency / Input Delay, Ping / Network] Sets NetworkThrottlingIndex to 0xFFFFFFFF (common gaming tweak). Can affect multimedia/network fairness. Revert deletes value.",
      "requiresAdmin": true,
      "requiresReboot": true,
      "apply": {
        "steps": [
          {
            "type": "registry.set",
            "path": "HKLM\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Multimedia\\SystemProfile",
            "name": "NetworkThrottlingIndex",
            "value": 4294967295,
            "valueType": "DWord"
          }
        ]
      },
      "revert": {
        "steps": [
          {
            "type": "registry.remove",
            "path": "HKLM\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Multimedia\\SystemProfile",
            "name": "NetworkThrottlingIndex"
          }
        ]
      },
      "riskLevel": "High",
      "check": {
        "steps": [
          {
            "type": "registry.check",
            "path": "HKLM\\SOFTWARE\\Microsoft\\Windows NT\\CurrentVersion\\Multimedia\\SystemProfile",
            "name": "NetworkThrottlingIndex",
            "valueType": "DWord",
            "equals": 4294967295
          }
        ]
      }
    },
