{
  "items": [
    {
      "id": "cpu.disable_basic_cstates",
      "name": "Disable Basic C-states",
      "category": "Hardware / CPU",
      "risk": "Warning",
      "description": "[Focus: Latency / Input Delay] Sets the current power plan to reduce CPU idle states (may increase power/temps).",
      "requiresAdmin": true,
      "requiresReboot": false,
      "apply": {
        "steps": [
          {
            "type": "powercfg.set",
            "args": [
              "/SETACVALUEINDEX",
              "SCHEME_CURRENT",
              "SUB_PROCESSOR",
              "IDLEDISABLE",
              "1"
            ]
          },
          {
            "type": "powercfg.set",
            "args": [
              "/SETACTIVE",
              "SCHEME_CURRENT"
            ]
          }
        ]
      },
      "revert": {
        "steps": [
          {
            "type": "powercfg.set",
            "args": [
              "/SETACVALUEINDEX",
              "SCHEME_CURRENT",
              "SUB_PROCESSOR",
              "IDLEDISABLE",
              "0"
            ]
          },
          {
            "type": "powercfg.set",
            "args": [
              "/SETACTIVE",
              "SCHEME_CURRENT"
            ]
          }
        ]
      },
      "type": "toggle",
      "riskLevel": "Warning",
      "check": {
        "steps": [
          {
            "type": "powercfg.check",
            "guid": null
          }
        ]
      }
    },
    {
      "id": "cpu.disable_coalescable_timer",
      "name": "Apply: Disable Coalescable Timer",
      "category": "Hardware / CPU",
      "risk": "Warning",
      "description": "[Focus: Latency / Input Delay] Disables dynamic tick to reduce timer coalescing (requires reboot).",
      "requiresAdmin": true,
      "requiresReboot": true,
      "apply": {
        "steps": [
          {
            "type": "shell.start",
            "file": "bcdedit",
            "args": [
              "/set",
              "disabledynamictick",
              "yes"
            ],
            "wait": true
          }
        ]
      },
      "revert": {
        "steps": [
          {
            "type": "shell.start",
            "file": "bcdedit",
            "args": [
              "/deletevalue",
              "disabledynamictick"
            ],
            "wait": true
          }
        ]
      },
      "type": "button",
      "riskLevel": "Warning",
      "kind": "tool",
      "manualOnly": true
    },
