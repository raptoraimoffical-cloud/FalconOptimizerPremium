    {
      "id": "privacy.disable_data_collection_hosts__windows.privacy",
      "type": "button",
      "name": "Apply: Disable Data Collection Hosts",
      "risk": "Warning",
      "description": "Adds common telemetry hosts to the hosts file.",
      "requiresAdmin": true,
      "apply": {
        "steps": [
          {
            "type": "cmd",
            "shell": "cmd",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"Add-Content -Path $env:SystemRoot\\System32\\drivers\\etc\\hosts -Value \\\"0.0.0.0 vortex.data.microsoft.com`n0.0.0.0 settings-win.data.microsoft.com\\\"\""
          }
        ]
      },
      "revert": {
        "steps": [
          {
            "type": "cmd",
            "shell": "cmd",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"((Get-Content $env:SystemRoot\\System32\\drivers\\etc\\hosts) | Where-Object {$_ -notmatch 'vortex\\.data\\.microsoft\\.com|settings-win\\.data\\.microsoft\\.com'}) | Set-Content $env:SystemRoot\\System32\\drivers\\etc\\hosts\""
          }
        ]
      },
      "riskLevel": "Warning",
      "category": "General / Privacy"
    },
