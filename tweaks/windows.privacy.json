    {
      "id": "privacy.disable_activity_feed__windows.privacy",
      "type": "toggle",
      "name": "Disable Activity Feed",
      "risk": "Safe",
      "description": "Disables the Windows activity feed.",
      "requiresAdmin": true,
      "apply": {
        "steps": [
          {
            "type": "registry.set",
            "path": "HKLM\\SOFTWARE\\Policies\\Microsoft\\Windows\\System",
            "name": "EnableActivityFeed",
            "value": 0,
            "valueType": "DWord"
          }
        ]
      },
      "revert": {
        "steps": [
          {
            "type": "registry.remove",
            "path": "HKLM\\SOFTWARE\\Policies\\Microsoft\\Windows\\System",
            "name": "EnableActivityFeed"
          }
        ]
      },
      "riskLevel": "Safe",
      "category": "General / Privacy",
      "check": {
        "steps": [
          {
            "type": "registry.check",
            "path": "HKLM\\SOFTWARE\\Policies\\Microsoft\\Windows\\System",
            "name": "EnableActivityFeed",
            "valueType": "DWord",
            "equals": 0
          }
        ]
      }
    },
